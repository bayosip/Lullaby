<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    android:layout_margin="@dimen/elevation"
    android:background="@drawable/edge_layout">

    <TextView
        android:id="@+id/textPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Select An Upload Option"
        android:textColor="@color/lightColor"
        android:textSize="@dimen/title_size_small"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

    <Button
        android:layout_marginTop="@dimen/elevation"
        android:id="@+id/buttonCam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Take A new Photo"
        android:textStyle="bold"
        android:textSize="@dimen/text_size"
        android:background="@color/buttonColor"
        android:textColor="@color/app_background_white"
        app:layout_constraintTop_toBottomOf="@id/textPicture"
        app:layout_constraintBottom_toTopOf="@id/buttonGallery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:layout_marginTop="@dimen/elevation"
        android:id="@+id/buttonGallery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/text_size"
        android:text="Choose From Gallery"
        android:background="@color/buttonColor"
        android:textColor="@color/app_background_white"
        app:layout_constraintTop_toBottomOf="@id/buttonCam"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>